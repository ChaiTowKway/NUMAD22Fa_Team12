<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".outfitToday.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="535dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_user"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Hi"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_stock"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:text="Wardrobe Stock:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_myWardrobe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wardrobe"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_myOccasions"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Occasions"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_myNotification"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:text="Notification"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_myOutfitSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Outfit Suggestions" />

                <Button
                    android:id="@+id/button_nearbyOutfits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nearby Outfits" />

                <Button
                    android:id="@+id/button_updateMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update My Profile" />

                <Button
                    android:id="@+id/button_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setting" />

                <Button
                    android:id="@+id/button_logOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Out" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>