<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".outfitToday.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="630dp"
        android:layout_gravity="center|top"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_user"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Hi, xxx"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wardrobe Stock: ###"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_myWardrobe"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:backgroundTint="#F3C0DB"
                android:onClick="onClick"
                android:text="Wardrobe"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_myOccasions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#F3C0DB"
                android:onClick="onClick"
                android:text="Occasions"
                android:textSize="14sp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="334dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_myOutfitSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F3C0DB"
                    android:onClick="onClick"
                    android:text="My Outfit Suggestions" />

                <Button
                    android:id="@+id/button_nearbyOutfits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F3C0DB"
                    android:onClick="onClick"
                    android:text="Nearby Outfits" />

                <Button
                    android:id="@+id/button_updateMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F3C0DB"
                    android:onClick="onClick"
                    android:text="Update My Profile" />

                <Button
                    android:id="@+id/button_logOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F44336"
                    android:onClick="onClick"
                    android:text="Log Out" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="320dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>