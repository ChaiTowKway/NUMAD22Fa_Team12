<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackgroundColor"
    tools:context=".outfitToday.ProfileFragment">

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="630dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_user"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Hi, xxx"
                    android:textAlignment="center"
                    android:textColor="@color/mainColor"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wardrobe Stock: ##"
                    android:textAlignment="center"
                    android:textColor="@color/mainColor"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_myWardrobe"
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mainColor"
                android:onClick="onClick"
                android:text="Wardrobe"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="28dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button_myOccasions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/mainColor"
                android:onClick="onClick"
                android:text="Occasions"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_myOutfitSuggestion"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onClick"
                android:text="My Outfit Suggestions"
                android:textColor="@color/mainColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_nearbyOutfits"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onClick"
                android:text="Nearby Outfits"
                android:textColor="@color/mainColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_updateMyProfile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onClick"
                android:text="Update My Profile"
                android:textColor="@color/mainColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_logOut"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onClick"
                android:text="Log Out"
                android:textColor="@color/warningColor"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>