<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outfitToday.AddNewOutfitActivity">

    <Spinner
        android:id="@+id/occasion_spinner1"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/outfitAddSubmitButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfit_image_view1"
        app:layout_constraintVertical_bias="0.502" />

    <Spinner
        android:id="@+id/season_spinner1"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toTopOf="@+id/outfitAddSubmitButton1"
        app:layout_constraintEnd_toStartOf="@+id/occasion_spinner1"
        app:layout_constraintStart_toEndOf="@+id/category_spinner1"
        app:layout_constraintTop_toBottomOf="@+id/outfit_image_view1" />

    <ImageView
        android:id="@+id/outfit_image_view1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/edit_outfit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_edit_button1"
        app:layout_constraintBottom_toTopOf="@+id/season_spinner1"/>

    <Button
        android:id="@+id/image_edit_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mainColor"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="17dp"
        android:text="Upload photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/outfit_image_view1" />

    <Spinner
        android:id="@+id/category_spinner1"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/outfitAddSubmitButton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outfit_image_view1"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/outfitAddSubmitButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mainColor"
        android:text="Submit"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/season_spinner1"/>


</androidx.constraintlayout.widget.ConstraintLayout>